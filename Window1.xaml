<Window x:Class="WpfTasks.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задание 1" Height="300" Width="400">
    <Grid>
        <Label Content="Введите число A:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox Name="AInput" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,10,0,0"/>

        <Label Content="Введите число B:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50"/>
        <TextBox Name="BInput" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,50,0,0"/>

        <Button Content="Посчитать" Click="Calculate_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,100,0,0"/>

        <TextBlock Name="ResultTextBlock" VerticalAlignment="Top" Margin="10,150,10,10"/>
    </Grid>
</Window>
